<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:v="clr-namespace:System;assembly=mscorlib">

    <!--#region Main window -->
    <v:String x:Key="h_main_window">ReedBooks</v:String>
    <v:String x:Key="m_edit">Edit</v:String>
    <v:String x:Key="m_books">Books</v:String>
    <v:String x:Key="m_reading_now">Currently Reading</v:String>
    <v:String x:Key="m_all_books">All Books</v:String>
    <v:String x:Key="m_search">Search</v:String>
    <v:String x:Key="m_readers_diary_collection">Reader's Diary</v:String>
    <v:String x:Key="m_my_collections_collection">My Collections</v:String>
    <v:String x:Key="m_new_collection">New Collection</v:String>
    <v:String x:Key="m_current">Current</v:String>
    <v:String x:Key="m_recent">Recent</v:String>
    <v:String x:Key="m_no_elements">No elements added yet</v:String>
    <v:String x:Key="m_load_book">Load Book</v:String>
    <v:String x:Key="m_search_hint">Start typing the book title...</v:String>
    <v:String x:Key="m_genre">Genre:</v:String>
    <v:String x:Key="m_chapters_count">Number of Chapters:</v:String>
    <v:String x:Key="m_read">Read</v:String>
    <!--#endregion-->

    <!--#region Reading window -->
    <v:String x:Key="h_reading_window">ReedBooks - Reading Mode</v:String>
    <v:String x:Key="r_temporarily_out_of_service">This part of the application is temporarily out of service.</v:String>
    <!--#endregion-->

    <!--#region Settings window-->
    <v:String x:Key="h_settings_window">ReedBooks - Settings</v:String>
    <v:String x:Key="s_language_label">Application Language</v:String>
    <v:String x:Key="s_language_hint">This setting only changes the interface language. Authors' names and content are not localized.</v:String>
    <v:String x:Key="s_theme_label">Theme</v:String>
    <v:String x:Key="s_theme_hint">Changes the application theme to light (default) or dark.</v:String>
    <v:String x:Key="s_save">Save</v:String>
    <!--#endregion-->

    <!--#region Dialog window -->
    <v:String x:Key="h_dialog_window">ReedBooks - Dialog</v:String>
    <v:String x:Key="d_acept_button">OK</v:String>
    <v:String x:Key="d_refuse_button">Cancel</v:String>
    <!--#endregion-->

    <!--#region Reading Diary window -->
    <v:String x:Key="h_reading_diary_window">ReedBooks - Reader's Diary</v:String>
    <!--#endregion-->

    <!--#region SPECIAL STRINGS -->
    <v:String x:Key="theme_light">Light</v:String>
    <v:String x:Key="theme_dark">Dark</v:String>

    <v:String x:Key="dialog_settings_title">Restart Required</v:String>
    <v:String x:Key="dialog_settings_content">To apply the changes made in settings, the application needs to be restarted. Do you want to do this now?</v:String>
    <!--#endregion-->
</ResourceDictionary>
