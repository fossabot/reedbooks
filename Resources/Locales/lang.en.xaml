    <v:String x:Key="h_reading_window">ReedBooks - Reading Mode</v:String>
    <v:String x:Key="r_temporarily_out_of_service">This part of the application is currently not available</v:String>
    <!--#endregion-->

    <!--#region Settings window-->
    <v:String x:Key="h_settings_window">ReedBooks - Settings</v:String>
    <v:String x:Key="s_language_label">Application Language</v:String>
    <v:String x:Key="s_language_hint">This setting only changes the interface language. Book authors' names and content remain untranslated.</v:String>
    <v:String x:Key="s_theme_label">Theme</v:String>
    <v:String x:Key="s_theme_hint">Switches the application theme to light (default) or dark.</v:String>
    <v:String x:Key="s_save">Save</v:String>
    <!--#endregion-->

