    <v:String x:Key="rd_quotes">Quotes</v:String>
    <v:String x:Key="rd_add_quote">Add</v:String>
    <v:String x:Key="rd_add_quote_header">Add Quote</v:String>
    <v:String x:Key="rd_quote_data_hint">Enter quote text...</v:String>
    <v:String x:Key="rd_quote_author_hint">Enter quote author...</v:String>
    <v:String x:Key="rd_quote_location_hint">Enter quote location in the book (e.g., chapter, page, etc.)...</v:String>
    <v:String x:Key="rd_cancel">Close</v:String>
    <!--#endregion-->

    <!--#region SPECIAL STRINGS -->
    <v:String x:Key="theme_light">Light</v:String>
    <v:String x:Key="theme_dark">Dark</v:String>

    <v:String x:Key="megabytes">MB</v:String>

    <v:String x:Key="dialog_settings_title">Restart Required</v:String>
    <v:String x:Key="dialog_settings_content">To apply the changes, the application needs to be restarted. Would you like to do that now?</v:String>

    <v:String x:Key="dialog_error_title">Error</v:String>
    <v:String x:Key="dialog_fatal_error_content">The application will be suspended due to an error:</v:String>
    <v:String x:Key="dialog_null_quote_content">Cannot add an empty quote!</v:String>

    <v:String x:Key="dialog_delete_book_title">Delete Book</v:String>
    <v:String x:Key="dialog_delete_book_content">Are you sure you want to delete this book?</v:String>
