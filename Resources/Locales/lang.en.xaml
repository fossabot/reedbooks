    <!--#region Main window -->
    <v:String x:Key="h_main_window">ReedBooks</v:String>
    <v:String x:Key="m_edit">Edit</v:String>
    <v:String x:Key="m_books">Books</v:String>
    <v:String x:Key="m_reading_now">Currently Reading</v:String>
