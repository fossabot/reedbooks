    <v:String x:Key="s_delete">Delete</v:String>
    <v:String x:Key="s_language_label">App Language</v:String>
    <v:String x:Key="s_language_hint">This setting only changes the language of the interface. Book authors' names and content are not localized.</v:String>
    <v:String x:Key="s_theme_label">Theme</v:String>
    <v:String x:Key="s_theme_hint">Switch between light (default) and dark theme.</v:String>
    <v:String x:Key="s_save">Save</v:String>
