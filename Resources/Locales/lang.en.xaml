    <v:String x:Key="rd_start">At the Beginning</v:String>
    <v:String x:Key="rd_middle">In the Middle</v:String>
    <v:String x:Key="rd_end">At the End</v:String>
    <v:String x:Key="rd_assessment">Rating</v:String>
    <v:String x:Key="rd_plot_originality">Plot Originality</v:String>
