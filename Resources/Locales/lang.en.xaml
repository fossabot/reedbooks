    <v:String x:Key="m_new_collection">New Collection</v:String>
    <v:String x:Key="m_current">Current</v:String>
    <v:String x:Key="m_recent">Recent</v:String>
    <v:String x:Key="m_no_elements">No elements added yet</v:String>
    <v:String x:Key="m_load_book">Load Book</v:String>
    <v:String x:Key="m_search_hint">Start typing the book title...</v:String>
    <v:String x:Key="m_genre">Genre:</v:String>
    <v:String x:Key="m_chapters_count">Number of Chapters:</v:String>
    <v:String x:Key="m_read">Read</v:String>
    <!--#endregion-->

    <!--#region Reading window -->
    <v:String x:Key="h_reading_window">ReedBooks - Reading Mode</v:String>
    <v:String x:Key="r_mark_as_read">Mark as Read</v:String>
    <v:String x:Key="r_mark_as_read_hint">Pressing this button will set today's date in the "End of Reading" section of the reader's diary.</v:String>
    <v:String x:Key="r_end_of_read_dialog_header">Congratulations!</v:String>
    <v:String x:Key="r_end_of_read_dialog_content">Congratulations on finishing the book! We invite you to go to the reader's diary to rate it.</v:String>
    <v:String x:Key="r_open_reading_diary">Go</v:String>
    <v:String x:Key="r_stay">Stay</v:String>
    <v:String x:Key="r_temporarily_out_of_service">This part of the application is currently not available</v:String>
    <!--#endregion-->

    <!--#region Settings window-->
    <v:String x:Key="h_settings_window">ReedBooks - Settings</v:String>
    <v:String x:Key="s_interface_header">Interface</v:String>
    <v:String x:Key="s_storage_management_header">Memory Management</v:String>
    <v:String x:Key="s_delete_unused_files_label">Delete Unused Files</v:String>
