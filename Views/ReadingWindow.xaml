<Window x:Class="ReedBooks.Views.ReadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:ReedBooks.ViewModels"
        mc:Ignorable="d"
        Foreground="{DynamicResource text_color}"
        FontFamily="{DynamicResource MainFont}"
        FontSize="14"
        Title="{DynamicResource h_reading_window}" Height="450" Width="800">
    <Window.DataContext>
        <local:ReadingWindowViewModel/>
    </Window.DataContext>
    <Grid Background="{DynamicResource window_background_color}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="{Binding ChaptersListBoxLength}"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0"
                        Orientation="Vertical">
                <ItemsControl ItemsSource="{Binding EpubBook.Navigation}"
                              Background="{DynamicResource container_background_color}"
                              IsEnabled="False">
                <ItemsControl.ItemTemplate>
                    <ItemContainerTemplate>
                        <Button Style="{DynamicResource MaterialDesignOutlinedLightButton}"
                                Foreground="{DynamicResource accent_color}"
                                Command="{Binding DataContext.ChangeSelectedFlowDocumentCommand, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}"
                                CommandParameter="{Binding Path=SelectedIndex, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}">
                            <TextBlock 
                                   Foreground="{DynamicResource text_color}"
                                   Text="{Binding Title}"/>
                        </Button>
                    </ItemContainerTemplate>
                </ItemsControl.ItemTemplate>

                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical">

                        </StackPanel>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
                <TextBlock Foreground="{DynamicResource hint_color}"
                           Text="{DynamicResource r_temporarily_out_of_service}"
                           TextAlignment="Center"/>
            </StackPanel>

            

            <FlowDocumentReader Grid.Column="1"
                                Document="{Binding LoadedFlowDocument}"
                                ViewingMode="Scroll">
            </FlowDocumentReader>
        </Grid>
    </Grid>
</Window>
