<Window x:Class="ReedBooks.Views.SettingsWindow"
        Style="{DynamicResource ReedBooksWindow}"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:ReedBooks.Views.Controls"
        xmlns:local="clr-namespace:ReedBooks.ViewModels"
        mc:Ignorable="d"
        Title="{DynamicResource h_settings_window}" Height="400" Width="800">
    <Window.DataContext>
        <local:SettingsWindowViewModel/>
    </Window.DataContext>
    <Grid Style="{DynamicResource MainGrid}">
        <Border CornerRadius="10"
                Margin="30"
                Background="{DynamicResource container_background_color}">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.6*"/>
                        <ColumnDefinition Width="0.2*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!--#region Language -->
                    <StackPanel Grid.Column="0"
                                Grid.Row="0">
                        <TextBlock Text="{DynamicResource s_language_label}"
                                   Style="{DynamicResource MaterialDesignHeadline6TextBlock}"
                                   Foreground="{DynamicResource text_color}"/>
                        <TextBlock Text="{DynamicResource s_language_hint}"
                                   Style="{DynamicResource MaterialDesignCaptionTextBlock}"
                                   HorizontalAlignment="Left"
                                   TextWrapping="Wrap"
                                   Foreground="{DynamicResource hint_color}"/>
                    </StackPanel>
                    <ComboBox Grid.Column="1"
                              Grid.Row="0"
                              Focusable="False"
                              ItemsSource="{Binding Languages}"
                              SelectedItem="{Binding SelectedLanguage}"
                              DisplayMemberPath="DisplayName"
                              SelectedValuePath="Tag"/>
                    <!--#endregion-->
                        
                    <Separator Grid.ColumnSpan="2"
                               Grid.Row="1"
                               Margin="0 10 0 10"/>
                    
                    <!--#region Theme -->
                    <StackPanel Grid.Column="0"
                                Grid.Row="2">
                        <TextBlock Text="{DynamicResource s_theme_label}"
                                   Style="{DynamicResource MaterialDesignHeadline6TextBlock}"
                                   Foreground="{DynamicResource text_color}"/>
                        <TextBlock Text="{DynamicResource s_theme_hint}"
                                   Style="{DynamicResource MaterialDesignCaptionTextBlock}"
                                   HorizontalAlignment="Left"
                                   TextWrapping="Wrap"
                                   Foreground="{DynamicResource hint_color}"/>
                    </StackPanel>
                    <ComboBox Grid.Column="1"
                              Grid.Row="2"
                              Focusable="False"
                              ItemsSource="{Binding Themes}"
                              SelectedItem="{Binding SelectedTheme}"
                              DisplayMemberPath="DisplayName"
                              SelectedValuePath="Tag"/>
                    <!--#endregion-->
                </Grid>

                <controls:ButtonWithImage Style="{DynamicResource MaterialDesignRaisedButton}"
                                          Grid.Row="1"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Bottom"
                                          Command="{Binding SaveCommand}"
                                          Source="/Resources/Icons/save.png"
                                          Text="{DynamicResource s_save}"/>
            </Grid>
        </Border>
    </Grid>
</Window>
