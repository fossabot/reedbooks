<UserControl x:Class="ReedBooks.Views.Controls.ButtonWithImage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ReedBooks.Views.Controls"
             Name="Button"
             mc:Ignorable="d">
    <Button Style="{Binding ElementName=Button, Path=Style}">
        <DockPanel VerticalAlignment="Center"
                   HorizontalAlignment="Left">
            <Image DockPanel.Dock="Left"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   Source="{Binding ElementName=Button, Path=Source}"/>

            <TextBlock DockPanel.Dock="Right"
                       Margin="10 0 0 0"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       Foreground="{DynamicResource text_color}"
                       Text="{Binding ElementName=Button, Path=Text}"/>
        </DockPanel>
    </Button>
</UserControl>
