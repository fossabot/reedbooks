<Window x:Class="ReedBooks.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:ReedBooks.ViewModels"
        mc:Ignorable="d"
        Foreground="{DynamicResource text_color}"
        FontFamily="{DynamicResource MainFont}"
        FontSize="14"
        Title="{DynamicResource h_main_window}" Height="600" Width="1000">
    <Window.DataContext>
        <local:MainWindowViewModel/>
    </Window.DataContext>
    <Grid Background="{DynamicResource window_background_color}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.4*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
             <!-- Hide panel button -->
            <Button Grid.Column="0"
                    Command="{Binding ChangeSidePanelVisibilityCommand}"
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top"
                    Style="{DynamicResource MaterialDesignIconButton}" 
                    Width="25" 
                    Height="25"
                    Margin="13.5"
                    Panel.ZIndex="100">
                <Image Width="20" 
                       Height="20" 
                       Source="/Resources/Icons/hide_bar.png"/>
            </Button>
            <StackPanel Grid.Column="0"
                        Visibility="{Binding SidePanelVisibility}"
                        Background="{DynamicResource container_background_color}" 
                        Orientation="Vertical">
                <!-- Top panel -->
                <StackPanel Orientation="Vertical"
                            Margin="10">
                    <Button Style="{DynamicResource MaterialDesignToolButton}" 
                            VerticalAlignment="Center"
                            HorizontalAlignment="Right"
                            Foreground="{DynamicResource hint_color}"
                            Content="{DynamicResource m_edit}" Cursor="Hand"/>
                    <!-- Settings button -->
                    <Button Style="{DynamicResource MaterialDesignIconButton}"
                            HorizontalAlignment="Right"
                            Width="25" 
                            Height="25">
                        <Image Width="20" 
                               Height="20" 
                               Source="/Resources/Icons/settings.png"/>
                    </Button>
                </StackPanel>

                <TextBlock Style="{DynamicResource MaterialDesignHeadline5TextBlock}"
                           Margin="10"
                           Text="{DynamicResource m_books}" 
                           FontWeight="DemiBold"/>

                <!-- Panel buttons -->
                <StackPanel Margin="10">
                    <Button Command="{Binding SwitchToTabCommand}"
                            CommandParameter="0"
                            Margin="0 0 0 10">
                        <Button.Style>
                            <Style TargetType="Button" 
                                   BasedOn="{StaticResource MaterialDesignRaisedButton}">
                                <Style.Triggers>
                                    <Trigger Property="IsFocused" Value="True">
                                        <Setter Property="Background" Value="{DynamicResource accent_color}"/>
                                    </Trigger>
                                    <Trigger Property="IsFocused" Value="False">
                                        <Setter Property="Background" Value="Transparent"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <DockPanel VerticalAlignment="Center"
                                   HorizontalAlignment="Left">
                            <Image DockPanel.Dock="Left"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   Source="/Resources/Icons/book.png"/>

                            <TextBlock DockPanel.Dock="Right"
                                       Margin="10 0 0 0"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource text_color}"
                                       Text="{DynamicResource m_reading_now}"/>
                        </DockPanel>
                    </Button>
                    <Button Command="{Binding SwitchToTabCommand}"
                            CommandParameter="1"
                            Margin="0 0 0 10">
                        <Button.Style>
                            <Style TargetType="Button" 
                                   BasedOn="{StaticResource MaterialDesignRaisedButton}">
                                <Style.Triggers>
                                    <Trigger Property="IsFocused" Value="True">
                                        <Setter Property="Background" Value="{DynamicResource accent_color}"/>
                                    </Trigger>
                                    <Trigger Property="IsFocused" Value="False">
                                        <Setter Property="Background" Value="Transparent"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <DockPanel VerticalAlignment="Center"
                                   HorizontalAlignment="Left">
                            <Image DockPanel.Dock="Left"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   Source="/Resources/Icons/all_books.png"/>

                            <TextBlock DockPanel.Dock="Right"
                                       Margin="10 0 0 0"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource text_color}"
                                       Text="{DynamicResource m_all_books}"/>
                        </DockPanel>
                    </Button>
                    <Button Command="{Binding SwitchToTabCommand}"
                            CommandParameter="2"
                            Margin="0 0 0 10" Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button" 
                                   BasedOn="{StaticResource MaterialDesignRaisedButton}">
                                <Style.Triggers>
                                    <Trigger Property="IsFocused" Value="True">
                                        <Setter Property="Background" Value="{DynamicResource accent_color}"/>
                                    </Trigger>
                                    <Trigger Property="IsFocused" Value="False">
                                        <Setter Property="Background" Value="Transparent"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <DockPanel VerticalAlignment="Center"
                                   HorizontalAlignment="Left">
                            <Image DockPanel.Dock="Left"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   Source="/Resources/Icons/search.png"/>

                            <TextBlock DockPanel.Dock="Right"
                                       Margin="10 0 0 0"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource text_color}"
                                       Text="{DynamicResource m_search}"/>
                        </DockPanel>
                    </Button>
                </StackPanel>


                <!-- Readers diary expander -->
                <Expander Margin="10 0 10 10"
                          Style="{DynamicResource MaterialDesignExpander}" 
                          Background="{DynamicResource container_background_color}"
                          IsExpanded="True"
                          Header="{DynamicResource m_readers_diary_collection}">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Foreground="{DynamicResource hint_color}"
                               Text="{DynamicResource m_no_elements}"/>
                    </StackPanel>
                    
                </Expander>

                <!-- Collections expander -->
                <Expander Margin="10 0 10 10"
                          Style="{DynamicResource MaterialDesignExpander}" 
                          Background="{DynamicResource container_background_color}"
                          IsExpanded="True"
                          Header="{DynamicResource m_my_collections_collection}">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Foreground="{DynamicResource hint_color}"
                               Text="{DynamicResource m_no_elements}"/>
                        <Separator/>
                        <Button Style="{DynamicResource MaterialDesignFlatButton}">
                            <DockPanel VerticalAlignment="Center"
                                   HorizontalAlignment="Left">
                                <Image DockPanel.Dock="Left"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   Source="/Resources/Icons/add.png"/>

                                <TextBlock DockPanel.Dock="Right"
                                       Margin="10 0 0 0"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource text_color}"
                                       Text="{DynamicResource m_new_collection}"/>
                            </DockPanel>
                        </Button>
                    </StackPanel>
                </Expander>
            </StackPanel>

            <TabControl SelectedIndex="{Binding SelectedTab}"
                        Grid.Column="1"
                        Style="{DynamicResource MaterialDesignFilledTabControl}">
                <TabItem>
                    <StackPanel Orientation="Vertical">
                        <TextBlock Style="{DynamicResource MaterialDesignHeadline5TextBlock}"
                           Margin="30"
                           Text="{DynamicResource m_reading_now}"/>
                        <Separator Margin="30 0 30 0"/>
                        <Grid Margin="30 0 0 30">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <!-- Current reding -->
                            <StackPanel Grid.Column="0"
                                Orientation="Vertical">
                                <TextBlock Style="{DynamicResource MaterialDesignHeadline6TextBlock}" 
                                    Text="{DynamicResource m_current}"/>
                            </StackPanel>

                            <!-- Recently readed -->
                            <StackPanel Grid.Column="1"
                                Orientation="Vertical">
                                <TextBlock Style="{DynamicResource MaterialDesignHeadline6TextBlock}" 
                                           Text="{DynamicResource m_recent}"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </TabItem>
                
                <TabItem>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="9*"/>
                            <RowDefinition Height="91*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0"
                                    Margin="10 0 10 0">
                            <Button Style="{DynamicResource MaterialDesignFlatButton}"
                                    Command="{Binding LoadFileCommand}"
                                    Width="300" Cursor="Hand">
                                <DockPanel>
                                    <Image DockPanel.Dock="Left"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   Source="/Resources/Icons/add.png"/>

                                    <TextBlock DockPanel.Dock="Right"
                                       Margin="10 0 0 0"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource text_color}"
                                       Text="{DynamicResource m_load_book}"/>
                                </DockPanel>
                            </Button>
                            <Separator/>
                        </StackPanel>

                        <ScrollViewer Grid.Row="1"
                                      VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Disabled"
                                      Margin="30"
                                      MaxHeight="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Window}}">
                            <ItemsControl Grid.Row="1"
                                          ItemsSource="{Binding LoadedBooks}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Margin="10"
                                                CornerRadius="10"
                                                Height="500"
                                                Width="300"
                                                Background="{DynamicResource container_background_color}">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="0.5*"/>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>

                                                <Image Margin="10"
                                                       Grid.Row="0"
                                                       Source="{Binding LinkToCover, Mode=OneWay}"/>

                                                <StackPanel Margin="10"
                                                            Grid.Row="1"
                                                            Orientation="Vertical">
                                                    <TextBlock HorizontalAlignment="Center"
                                                               Text="{Binding Name}"
                                                               FontWeight="SemiBold"
                                                               FontSize="20"/>
                                                    <TextBlock HorizontalAlignment="Left"
                                                               Text="{Binding Author}"
                                                               FontWeight="Light"
                                                               FontSize="16"
                                                               Foreground="{DynamicResource hint_color}"/>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{DynamicResource m_genre}"
                                                                   Margin="0 0 4 0"
                                                                   VerticalAlignment="Center"
                                                                   Foreground="{DynamicResource hint_color}"
                                                                   FontSize="16"/>
                                                        <TextBlock HorizontalAlignment="Left"
                                                                   VerticalAlignment="Center"
                                                                   Text="{Binding Genre}"
                                                                   Margin="0 0 4 0"
                                                                   FontWeight="Light"
                                                                   FontSize="16"
                                                                   Foreground="{DynamicResource hint_color}"/>
                                                        <Button Style="{DynamicResource MaterialDesignIconButton}"
                                                                VerticalAlignment="Center"
                                                                Width="25" 
                                                                Height="25">
                                                            <Image Width="20" 
                                                                   Height="20" 
                                                                   Source="/Resources/Icons/edit.png"/>
                                                        </Button>
                                                    </StackPanel>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{DynamicResource m_chapters_count}"
                                                                   Margin="0 0 4 0"
                                                                   VerticalAlignment="Center"
                                                                   Foreground="{DynamicResource hint_color}"
                                                                   FontSize="16"/>
                                                        <TextBlock HorizontalAlignment="Left"
                                                                   VerticalAlignment="Center"
                                                                   Text="{Binding ChaptersCount}"
                                                                   Margin="0 0 4 0"
                                                                   FontWeight="Light"
                                                                   FontSize="16"
                                                                   Foreground="{DynamicResource hint_color}"/>
                                                    </StackPanel>
                                                </StackPanel>

                                                <Grid Margin="10"
                                                      Grid.Row="2"
                                                      VerticalAlignment="Bottom">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition/>
                                                        <ColumnDefinition/>
                                                    </Grid.ColumnDefinitions>

                                                    <Button Style="{DynamicResource MaterialDesignFlatButton}"
                                                            Grid.Column="0">
                                                        <DockPanel VerticalAlignment="Center"
                                                                   HorizontalAlignment="Left">
                                                            <Image DockPanel.Dock="Left"
                                                                   HorizontalAlignment="Left"
                                                                   VerticalAlignment="Center"
                                                                   Source="/Resources/Icons/read_book.png"/>

                                                            <TextBlock DockPanel.Dock="Right"
                                                                       Margin="10 0 0 0"
                                                                       HorizontalAlignment="Right"
                                                                       VerticalAlignment="Center"
                                                                       Foreground="{DynamicResource text_color}"
                                                                       Text="{DynamicResource m_read}"/>
                                                        </DockPanel>
                                                    </Button>
                                                    <Button Style="{DynamicResource MaterialDesignIconButton}"
                                                            Grid.Column="1"
                                                            Command="{Binding DataContext.DeleteBookCommand, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                                                            CommandParameter="{Binding Guid}"
                                                            HorizontalAlignment="Right"
                                                            Width="30" 
                                                            Height="30">
                                                        <Image Width="20" 
                                                               Height="20" 
                                                               Source="/Resources/Icons/delete.png"/>
                                                    </Button>
                                                </Grid>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Orientation="Horizontal"
                                                   Margin="30"
                                                   Grid.Row="1"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </TabItem>

                <TabItem>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="9*"/>
                            <RowDefinition Height="91*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0"
                                    Margin="10 0 10 0">
                            <TextBox Style="{DynamicResource MaterialDesignFloatingHintTextBox}"
                                     materialDesign:HintAssist.Hint="{DynamicResource m_search_hint}"
                                     TextChanged="TextBox_TextChanged"/>
                        </StackPanel>

                        <ScrollViewer Grid.Row="1"
                                      VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Disabled"
                                      Margin="30"
                                      MaxHeight="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Window}}">
                            <ItemsControl Grid.Row="1"
                                          ItemsSource="{Binding SearchedBooks}">

                                <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="10"
                                            CornerRadius="10"
                                            Height="500"
                                            Width="300"
                                            Background="{DynamicResource container_background_color}">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="0.5*"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>

                                            <Image Margin="10"
                                                   Grid.Row="0"
                                                   Source="{Binding LinkToCover, Mode=OneWay}"/>

                                            <StackPanel Margin="10"
                                                        Grid.Row="1"
                                                        Orientation="Vertical">
                                                <TextBlock HorizontalAlignment="Center"
                                                           Text="{Binding Name}"
                                                           FontWeight="SemiBold"
                                                           FontSize="20"/>
                                                <TextBlock HorizontalAlignment="Left"
                                                           Text="{Binding Author}"
                                                           FontWeight="Light"
                                                           FontSize="16"
                                                           Foreground="{DynamicResource hint_color}"/>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{DynamicResource m_genre}"
                                                               Margin="0 0 4 0"
                                                               VerticalAlignment="Center"
                                                               Foreground="{DynamicResource hint_color}"
                                                               FontSize="16"/>
                                                    <TextBlock HorizontalAlignment="Left"
                                                               VerticalAlignment="Center"
                                                               Text="{Binding Genre}"
                                                               Margin="0 0 4 0"
                                                               FontWeight="Light"
                                                               FontSize="16"
                                                               Foreground="{DynamicResource hint_color}"/>
                                                    <Button Style="{DynamicResource MaterialDesignIconButton}"
                                                            VerticalAlignment="Center"
                                                            Width="25" 
                                                            Height="25">
                                                        <Image Width="20" 
                                                               Height="20" 
                                                               Source="/Resources/Icons/edit.png"/>
                                                    </Button>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{DynamicResource m_chapters_count}"
                                                               Margin="0 0 4 0"
                                                               VerticalAlignment="Center"
                                                               Foreground="{DynamicResource hint_color}"
                                                               FontSize="16"/>
                                                    <TextBlock HorizontalAlignment="Left"
                                                               VerticalAlignment="Center"
                                                               Text="{Binding ChaptersCount}"
                                                               Margin="0 0 4 0"
                                                               FontWeight="Light"
                                                               FontSize="16"
                                                               Foreground="{DynamicResource hint_color}"/>
                                                </StackPanel>
                                            </StackPanel>

                                                <Grid Margin="10"
                                                      Grid.Row="2"
                                                      VerticalAlignment="Bottom">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition/>
                                                        <ColumnDefinition/>
                                                    </Grid.ColumnDefinitions>

                                                    <Button Style="{DynamicResource MaterialDesignFlatButton}"
                                                            Grid.Column="0">
                                                        <DockPanel VerticalAlignment="Center"
                                                                   HorizontalAlignment="Left">
                                                            <Image DockPanel.Dock="Left"
                                                                   HorizontalAlignment="Left"
                                                                   VerticalAlignment="Center"
                                                                   Source="/Resources/Icons/read_book.png"/>

                                                            <TextBlock DockPanel.Dock="Right"
                                                                       Margin="10 0 0 0"
                                                                       HorizontalAlignment="Right"
                                                                       VerticalAlignment="Center"
                                                                       Foreground="{DynamicResource text_color}"
                                                                       Text="{DynamicResource m_read}"/>
                                                        </DockPanel>
                                                    </Button>
                                                    <Button Style="{DynamicResource MaterialDesignIconButton}"
                                                            Grid.Column="1"
                                                            Command="{Binding DataContext.DeleteBookCommand, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                                                            CommandParameter="{Binding Guid}"
                                                            HorizontalAlignment="Right"
                                                            Width="30" 
                                                            Height="30">
                                                        <Image Width="20" 
                                                               Height="20" 
                                                               Source="/Resources/Icons/delete.png"/>
                                                    </Button>
                                                </Grid>
                                            </Grid>
                                    </Border>
                                </DataTemplate>
                                </ItemsControl.ItemTemplate>
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Orientation="Horizontal"
                                                   Margin="30"
                                                   Grid.Row="1"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</Window>
